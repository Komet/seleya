{% extends 'SeleyaBundle:Admin:Faculty/base.html.twig' %}
{% from 'MopaBootstrapBundle::flash.html.twig' import flash %}

{% block content_content %}

{% if faculties|length == 0 %}
	{{ flash('info', 'Es sind keine Fachbereiche vorhanden.', false, true) }}
{% else %}
	<ul class="table">
	{% for faculty in faculties %}
		<li>
			<span>{{ faculty.name }}</span>
			<span class="buttons">
					<a href="{{ path('admin_faculty_update', { 'id': faculty.id }) }}" class="btn btn-primary btn-small"><i class="icon-pencil icon-white"></i> {% trans %}Bearbeiten{% endtrans %}</a>
			</span>
		</li>
	{% endfor %}
	</ul>
{% endif %}
{% endblock %}
